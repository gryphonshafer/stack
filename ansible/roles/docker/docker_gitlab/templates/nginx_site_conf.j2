server {
    listen 80;
    server_name {{ ansible_hostname }}.{{ domain }};
    include conf.d/server;

    root /var/www/goldenguru.com/htdocs;
    index index.html;

    location /.well-known {
        alias /var/www/{{ domain }}/htdocs/.well-known;
    }

    location / {
        rewrite ^$      https://$host    redirect;
        rewrite ^/$     https://$host/   redirect;
        rewrite ^/(.*)$ https://$host/$1 redirect;
    }
} # 80

server {
    listen 443;
    server_name {{ ansible_hostname }}.{{ domain }};
    include conf.d/server;
    include ssl_conf;

    location / {
        proxy_pass http://localhost:5880;
    }
} # 443
